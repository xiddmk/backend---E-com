<script>
    var img = document.querySelector('.image')

    var profilepicForm = document.querySelector('#profilepic')

    img.addEventListener('click', function () {
        profilepicForm.click()
    })

    profilepicForm.addEventListener('change', function () {
        document.querySelector('#form').submit();
    })
</script>

</html>