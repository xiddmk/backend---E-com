<script>
 



  document.addEventListener('DOMContentLoaded', function () {
    const searchIcon = document.getElementById('searchIcon');
    const searchForm = document.getElementById('searchForm');

    searchIcon.addEventListener('click', function (event) {
      event.preventDefault(); // Prevent the form submission

      // Toggle the 'visible' class on the search form
      searchForm.classList.toggle('visible');

      // If the form is visible, focus on the search input
      if (searchForm.classList.contains('visible')) {
        document.getElementById('searchInput').focus();
      }
    });
  });



</script>
<script>
  // Add event listener to the select element
  const selectElement = document.getElementById('productCategory');
  selectElement.addEventListener('change', function () {
    // Get the selected value
    const selectedCategory = selectElement.value;

    // Redirect to the homepage with the selected category as a query parameter
    window.location.href = `/homepage?category=${selectedCategory}`;
  });
</script>

<script>
  async function addToCart(productId, event) {
    try {
      const response = await axios.get(`/addCart/${productId}`);
      
      // Get the button element that was clicked
      const clickedButton = event.target;

      // Update the inner HTML of the button with a red shopping bag icon
      clickedButton.innerHTML = '<i style="color:red" class="ri-shopping-bag-fill"></i>';

      // Update the inner HTML of the button after a delay of 2000 milliseconds (2 seconds)
      setTimeout(() => {
        // Reset the inner HTML of the button to the original shopping bag icon
        clickedButton.innerHTML = '<i class="ri-shopping-bag-fill"></i>';
      }, 2000);
    } catch (error) {
      console.error("Error adding to cart:", error);
    }
  }
</script>


